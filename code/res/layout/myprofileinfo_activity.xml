<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

    <RelativeLayout
        android:id="@+id/name_region"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_below="@id/everyday_rec"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:background="@drawable/my_tab_above">

        <ImageView
            android:id="@+id/name_iamge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:background="@drawable/popup_menu_male_normal"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/name_iamge"
            android:layout_marginLeft="11dp"
            android:text="@string/unpay"
            android:textColor="@color/text_color_3"
            android:gravity="center"
            android:textSize="15dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="11dp"
            android:layout_centerVertical="true"
            android:background="@drawable/arrow_right"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/password_region"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_below="@id/name_region"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:background="@drawable/my_tab_above">

        <ImageView
            android:id="@+id/passwd_iamge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:background="@drawable/popup_menu_male_normal"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/passwd_iamge"
            android:layout_marginLeft="11dp"
            android:text="修改密码"
            android:textColor="@color/text_color_3"
            android:gravity="center"
            android:textSize="15dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="11dp"
            android:layout_centerVertical="true"
            android:background="@drawable/arrow_right"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/phone_region"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_below="@id/password_region"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:background="@drawable/my_tab_above">

        <ImageView
            android:id="@+id/phone_iamge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:background="@drawable/popup_menu_male_normal"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/phone_iamge"
            android:layout_marginLeft="11dp"
            android:text="已绑定手机号码"
            android:textColor="@color/text_color_3"
            android:gravity="center"
            android:textSize="15dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="11dp"
            android:layout_centerVertical="true"
            android:background="@drawable/arrow_right"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/area_region"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_below="@id/phone_region"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:background="@drawable/my_tab_above"
        android:visibility="gone">

        <ImageView
            android:id="@+id/area_iamge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:background="@drawable/popup_menu_male_normal"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/area_iamge"
            android:layout_marginLeft="11dp"
            android:text="收获地址"
            android:textColor="@color/text_color_3"
            android:gravity="center"
            android:textSize="15dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="11dp"
            android:layout_centerVertical="true"
            android:background="@drawable/arrow_right"/>
    </RelativeLayout>

    <Button
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/phone_region"
        android:text="退出"
        android:background="@drawable/detail_btn_n"/>

</RelativeLayout>