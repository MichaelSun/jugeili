<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".JuGeiLiActivity">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="68dp"
        android:contentDescription="main_fragment_container"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/main_page_bottom_bar"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/location"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:background="@drawable/main_page_tab_btn_bg"
            android:src="@drawable/location"
            android:scaleType="center"
            android:clickable="true"
            android:contentDescription="main_contact_tab_btn"/>

        <ImageView
            android:id="@+id/tuangou"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:background="@drawable/main_page_tab_btn_bg"
            android:src="@drawable/tuangou"
            android:scaleType="center"
            android:clickable="true"
            android:contentDescription="main_contact_tab_btn"/>

        <ImageView
            android:id="@+id/profile"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:background="@drawable/main_page_tab_btn_bg"
            android:src="@drawable/profile"
            android:scaleType="center"
            android:clickable="true"
            android:contentDescription="main_profile_tab_btn"/>

        <ImageView
            android:id="@+id/more"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:background="@drawable/main_page_tab_btn_bg"
            android:src="@drawable/more"
            android:scaleType="center"
            android:clickable="true"
            android:contentDescription="main_setting_tab_btn"/>

    </LinearLayout>

</RelativeLayout>
